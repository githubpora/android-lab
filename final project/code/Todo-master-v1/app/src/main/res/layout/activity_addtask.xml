<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="添加一个任务..."
        android:textSize="16sp"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="到期时间："
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/text_ddl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="未设置"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/text_set_ddl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设置时间"
            android:textSize="16sp"
            android:textColor="@color/colorWordBlue"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置提醒："
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/text_remind_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="关"
            android:textSize="16sp"/>
        <Switch
            android:id="@+id/switch_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edit_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="任务详情..."
            android:textSize="16sp"
            android:background="@null"
            android:inputType="textMultiLine"
            android:minLines="20"
            android:gravity="top|left"
            android:layout_margin="16dp"
            />
    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorMicroGray"

        >
        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            app:layout_constraintRight_toLeftOf="@+id/text_confirm"
            app:layout_constraintTop_toTopOf="@+id/text_confirm"
            android:layout_marginRight="32dp"
            android:textSize="18sp"
            android:textColor="@color/colorWordBlue"
            />
        <TextView
            android:id="@+id/text_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="确认"
            android:textSize="18sp"
            android:textColor="@color/colorWordBlue"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="#cdcd"
            android:gravity="center"
            android:text="@string/long_click_record"
            android:textColor="@color/colorWordBlue"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_cancel"/>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>